<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListOfProducts.Views.ProductsView2">
  
  <ContentPage.Content>
    <StackLayout>

      <Label Text="blah" BackgroundColor="Lime" />
      
      <ListView x:Name="ListOfProducts" ItemsSource="{Binding Products}">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding Name}" Detail="{Binding Price}" />
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
      
      <Label Text="blah blah" BackgroundColor="Fuchsia"></Label>
    </StackLayout>

    
  </ContentPage.Content>
</ContentPage>